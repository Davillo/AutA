<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="unileao.edu.br.autappfinal.ActivityBeber">






    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">


            <ImageView
                android:id="@+id/acai"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignTop="@+id/sorvete"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/acai" />

            <ImageView
                android:id="@+id/achocolatado"
                android:layout_width="90dp"
                android:layout_marginTop="5dp"
                android:layout_height="90dp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/iogurte"
                android:layout_toStartOf="@+id/iogurte"
                app:srcCompat="@drawable/achocolatado" />

            <ImageView
                android:id="@+id/sorvete"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignLeft="@+id/milkshake"
                android:layout_alignStart="@+id/milkshake"
                android:layout_below="@+id/milkshake"
                android:layout_marginTop="16dp"
                app:srcCompat="@drawable/sorvete" />

            <ImageView
                android:id="@+id/agua"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignLeft="@+id/achocolatado"
                android:layout_alignStart="@+id/achocolatado"
                android:layout_below="@+id/achocolatado"
                android:layout_marginTop="14dp"
                app:srcCompat="@drawable/agua" />

            <ImageView
                android:id="@+id/aguadecoco"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="5dp"
                android:layout_above="@+id/agua"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/aguadecoco" />

            <ImageView
                android:id="@+id/cafe"
                android:layout_marginTop="5dp"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:srcCompat="@drawable/cafe"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/aguadecoco"
                android:layout_toEndOf="@+id/aguadecoco" />


            <ImageView
                android:id="@+id/cereal"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignTop="@+id/agua"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/cereal" />

            <ImageView
                android:id="@+id/vitaminadefruta"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignTop="@+id/cereal"
                android:layout_toEndOf="@+id/cereal"
                android:layout_toRightOf="@+id/cereal"
                app:srcCompat="@drawable/vitaminadefruta" />

            <ImageView
                android:id="@+id/cha"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_below="@+id/agua"
                android:layout_marginTop="14dp"
                android:layout_toLeftOf="@+id/iogurte"
                android:layout_toStartOf="@+id/iogurte"
                app:srcCompat="@drawable/cha" />

            <ImageView
                android:id="@+id/iogurte"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignTop="@+id/cha"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/iogurte" />

            <ImageView
                android:id="@+id/leite"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:srcCompat="@drawable/leite"
                android:layout_alignTop="@+id/iogurte"
                android:layout_toRightOf="@+id/iogurte"
                android:layout_toEndOf="@+id/iogurte" />

            <ImageView
                android:id="@+id/milkshake"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignLeft="@+id/cha"
                android:layout_alignStart="@+id/cha"
                android:layout_below="@+id/cha"
                android:layout_marginTop="14dp"
                app:srcCompat="@drawable/milkshake" />

            <ImageView
                android:id="@+id/mingau"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignTop="@+id/milkshake"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/mingau" />


            <ImageView
                android:id="@+id/suco"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignTop="@+id/acai"
                android:layout_toEndOf="@+id/acai"
                android:layout_toRightOf="@+id/acai"
                app:srcCompat="@drawable/suco" />

            <ImageView
                android:id="@+id/refrigerante"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignTop="@+id/mingau"
                android:layout_toEndOf="@+id/mingau"
                android:layout_toRightOf="@+id/mingau"
                app:srcCompat="@drawable/refrigerante" />


        </RelativeLayout>


    </android.support.v4.widget.NestedScrollView>

    <ImageView
        android:id="@+id/animacaoBeber"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:visibility="invisible" />

</FrameLayout>
